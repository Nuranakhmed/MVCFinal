
@using MaximProject.Areas.ViewModels;
@model ServicesVM
<div class="card col-5">
	<div class="card-body">
		<h4 class="card-title">Create </h4>
		<form class="forms-sample" method="post" enctype="multipart/form-data">

			<div class="form-group">
				<label>Photo</label>
				<input type="file" asp-for="Photo" class="form-control" placeholder="Image" accept="image/*">
				<span class="text-danger" asp-validation-for="Photo"></span>
			</div>
			<div class="form-group">
				<label>Name</label>
				<input asp-for="Name" class="form-control" placeholder="Description">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			
			<div class="form-group">
				<label>Description</label>
				<input asp-for="Description" class="form-control" placeholder="Description">
				<span class="text-danger" asp-validation-for="Description"></span>
			</div>

			<button type="submit" class="btn btn-primary mr-2">Submit</button>
			<button asp-action="Index" class="btn btn-light">Cancel</button>

		</form>
	</div>
</div>
